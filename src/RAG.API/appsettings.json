{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=rag_db;Username=rag_user;Password=devpassword123"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
