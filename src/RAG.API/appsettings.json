    "Url": "http://localhost:9200",
    "IndexName": "rag_documents",
    "NumberOfShards": 1,
    "NumberOfReplicas": 0
  },
  "Qdrant": {
    "Url": "http://localhost:6334",
    "CollectionName": "document-embeddings",
    "VectorSize": 384,
    "Distance": "Cosine"
  },
  "EmbeddingService": {
    "Url": "http://localhost:8001",
    "ServiceUrl": "http://localhost:8001",
    "TimeoutSeconds": 30,
    "MaxBatchSize": 32,
    "MaxRetries": 3
  },
  "LLMProviders": {
    "Default": "Ollama",
    "OpenAI": {
      "ApiKey": "",
      "Model": "gpt-4-turbo",
      "MaxRetries": 3,
      "TimeoutSeconds": 60
    },
    "Ollama": {
      "Url": "http://localhost:11434",
      "Model": "phi3:mini",
      "TimeoutSeconds": 600,
      "StreamingEnabled": true
    }
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/rag",
    "Audience": "rag-api",
    "Admin": {
      "BaseUrl": "http://localhost:8080",
      "Realm": "rag",
      "ClientId": "rag-api",
      "ClientSecret": "rag-api-secret",
      "Enabled": true,
      "CacheDurationSeconds": 300
    }
  },
  "Authentication": {
    "Provider": "keycloak",
    "Keycloak": {
      "Authority": "http://localhost:8080/realms/rag",
      "ClientId": "rag-api",
      "ClientSecret": "rag-api-secret",
      "RequireHttpsMetadata": false,
      "Audience": "rag-api",
      "ClockSkewSeconds": 0,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    },
    "Auth0": {
      "Domain": "",
      "ClientId": "",
      "ClientSecret": "",
      "Audience": ""
    },
    "AzureAd": {
      "TenantId": "",
      "ClientId": "",
      "ClientSecret": "",
      "Instance": "https://login.microsoftonline.com/",
      "Audience": ""
    }
  },
  "MinIO": {
    "Endpoint": "localhost:9090",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "BucketName": "rag-documents",
    "UseSSL": false
  },
  "Chunking": {
    "ChunkSize": 512,
    "OverlapSize": 128
  },
  "TextCleaning": {
    "Enabled": true,
    "RulesDirectory": "config/text-cleaning",
    "ActiveRuleSets": [
      "base",
      "ukrainian",
      "academic-forms"
    ],
    "DefaultLanguage": "uk",
    "DetailedLogging": false
  },
  "BM25Settings": {
    "K1": 1.2,
    "B": 0.75,
    "DefaultTopK": 10,
    "MaxTopK": 100,
    "TimeoutSeconds": 5,
    "HighlightFragmentSize": 150
  },
  "DenseSettings": {
    "DefaultTopK": 10,
    "MaxTopK": 100,
    "TimeoutSeconds": 10,
    "SimilarityThreshold": 0.5,
    "EmbeddingTimeoutSeconds": 5,
    "QdrantTimeoutSeconds": 5
  },
  "RetrievalSettings": {
    "DefaultStrategy": "Dense",
    "EnableStrategyFallback": true,
    "FallbackStrategy": "BM25"
  },
  "QueryClassification": {
    "Provider": "ollama",
    "Model": "phi-3:mini",
    "Timeout": 5000,
    "EnableCache": true,
    "CacheDuration": "24:00:00",
    "FallbackToHeuristics": true
  },
  "HybridSearch": {
    "Alpha": 0.5,
    "Beta": 0.5,
    "IntermediateK": 20,
    "RerankingMethod": "Weighted"
  },
  "RRF": {
    "K": 60
  },
  "ContextAssembly": {
    "MaxTokens": 3000,
    "MinScore": 0.3,
    "TokenCounterStrategy": "Approximate",
    "EnableDeduplication": true
  },
  "PromptTemplates": {
    "Directory": "prompts/templates",
    "EnableHotReload": true,
    "DefaultTemplate": "rag-answer-generation",
    "EnableABTesting": false,
    "DefaultVersion": null
  },
  "HallucinationDetection": {
    "EnableContextGrounding": true,
    "EnableSelfConsistency": false,
    "EnableLLMJudge": false,
    "GroundingThreshold": 0.7,
    "ConsistencyThreshold": 0.6,
    "MinConfidence": 0.7,
    "EnableHumanReview": false,
    "GroundingWeight": 0.5,
    "ConsistencyWeight": 0.3,
    "FaithfulnessWeight": 0.2
  },
  "Validation": {
    "MaxQueryLength": 5000,
    "MaxTopK": 100,
    "MaxFileSizeMb": 50,
    "AllowedFileExtensions": [".txt", ".pdf", ".docx"],
    "MaxTitleLength": 500,
    "MaxHybridSearchLimit": 100
  },
  "ApiVersioning": {
    "DefaultVersion": "1.0",
    "SupportedVersions": ["1.0"],
    "DeprecatedVersions": [],
    "AssumeDefaultVersionWhenUnspecified": true,
    "ReportApiVersions": true
  },
  "RateLimiting": {
    "Enabled": true,
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": ["127.0.0.1", "::1"],
    "ClientWhitelist": [],
    "Tiers": {
      "Anonymous": 100,
      "Authenticated": 200,
      "Admin": 500
    },
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ],
    "EndpointRules": [
      {
        "Endpoint": "get:/healthz",
        "Period": "1m",
        "Limit": 1000
      },
      {
        "Endpoint": "get:/api/v*/documents",
        "Period": "1m",
        "Limit": 300
      },
      {
        "Endpoint": "post:/api/v*/query",
        "Period": "1m",
        "Limit": 50
      },
      {
        "Endpoint": "post:/api/v*/documents",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": ["127.0.0.1", "::1"],
    "QuotaExceededResponse": {
      "ContentType": "application/problem+json",
      "Content": "{\"type\":\"https://api.rag.system/errors/rate-limit-exceeded\",\"title\":\"Rate limit exceeded\",\"status\":429,\"detail\":\"You have exceeded the rate limit. Try again later.\",\"retryAfter\":\"{RetryAfter}\"}"
    },
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "get:/healthz",
        "Period": "1m",
        "Limit": 1000
      },
      {
        "Endpoint": "get:/api/v*/documents",
        "Period": "1m",
        "Limit": 300
      },
      {
        "Endpoint": "post:/api/v*/query",
        "Period": "1m",
        "Limit": 50
      },
      {
        "Endpoint": "post:/api/v*/documents",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },
  "ClientRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "ClientWhitelist": []
  },
  "ClientRateLimitPolicies": {
    "ClientRules": [
      {
        "ClientId": "role:admin",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 500
          }
        ]
      },
      {
        "ClientId": "role:user",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 200
          }
        ]
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"],
    "AllowedHeaders": ["Content-Type", "Authorization", "X-Requested-With", "Accept", "Origin"],
    "ExposedHeaders": [
      "X-RateLimit-Limit",
      "X-RateLimit-Remaining",
      "X-RateLimit-Reset",
      "X-Request-Id",
      "api-supported-versions",
      "api-deprecated-versions"
